@model IEnumerable<Activity>

<h1>Activity List page</h1>

<a asp-action="Create" class="btn btn-info">Create an Activity</a>
<div>
    @if(Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Activity Name
                </th>
                <th>
                    Activity Date
                </th>
            </tr>

            @foreach (var activity in Model)
            {
                <tr>
                    <td>
                        @activity.Name
                    </td>
                    <td>
                        @activity.Date
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No Activities yet! Go to Create Activity to make one.</p>
    }
</div>